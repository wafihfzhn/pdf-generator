<div class="container">
  <h3 class="text-center my-5">Payments</h3>

  <table class="table">
    <thead>
      <tr>
        <th scope="col">No</th>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Amount</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <% @payments.each_with_index do |payment, index| %>
    <tbody>
      <tr>
        <th scope="row"><%= index + 1 %></th>
        <td><%= payment.name %></td>
        <td><%= payment.email %></td>
        <td>$<%= payment.amount %></td>
        <td><%= link_to "Detail", payment_path(payment), class: "badge badge-pill badge-success" %></td>
      </tr>
    </tbody>
    <% end %>
  </table>
</div>